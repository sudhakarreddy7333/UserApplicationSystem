@model UserApplicationSystem.BusinessModels.RelationsModel


@using (Html.BeginForm("MemberRelations", "Home", null, FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Label(Model.UserName)<label>'s Relationship</label>
    @Html.Hidden("UserName", Model.UserName)
    for (var i = 0; i < Model.MembersRelations.Count(); i++)
    {
        <div class="form-group">
            @Html.Label("Relationship with "+Model.MembersRelations[i].FirstName, new { @class = "control-label col-lg-5" })
                @Html.DropDownListFor(model => model.MembersRelations[i].Relation, new List<SelectListItem>(){
                    new SelectListItem { Text = "Father", Value = "Father" },
                    new SelectListItem { Text = "Mother", Value = "Mother" },
                    new SelectListItem { Text = "Daughter", Value = "Daughter" },
                    new SelectListItem { Text = "Son", Value = "Son" } }, "Select Relation")
        </div>
        @Html.HiddenFor(model => model.MembersRelations[i].MemberId)
        @Html.HiddenFor(model => model.MembersRelations[i].RelationWithMemberId)
    }

    <div class="row">
        <div class="col-lg-6">
            <button class="btn btn-success">Save and Next</button>
        </div>
        <div class="col-lg-6">
            <button class="btn btn-success">Back</button>
            <input type="submit" value="Submit" onclick="getData(model)" class="btn btn-success" />
        </div>
    </div>
}
